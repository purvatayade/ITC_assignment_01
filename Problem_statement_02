def get_name():
    return input("Please enter your name: ")

def get_tshirt():
    available_brands = ["Nike", "Adidas", "Puma", "Reebok"]
    user_name = get_name()
    brand_name = input("Enter the brand name you're looking for: ")  
    tshirt_size = input("Enter the T-shirt size (optional, press Enter to skip): ")

    if brand_name.lower() in [brand.lower() for brand in available_brands]:
        if tshirt_size:
            print(f"Hi {user_name}, the brand '{brand_name}' in size '{tshirt_size}' is available in our store!")
        else:
            print(f"Hi {user_name}, the brand '{brand_name}' is available in our store")
    else:
        print(f"Hi {user_name}, unfortunately, we currently don't have '{brand_name}' in stock.")

get_tshirt()
